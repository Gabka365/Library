@model Library.Models.AuthorViewModel


@section Style
{
    <link href="/css/Authors/authors.css?v=1.1" rel="stylesheet"></link>
}


<form action="/Authors/Create" method="post" enctype="multipart/form-data">
    
    <div class="input-block">
        <div>
            First Name: @Html.TextBoxFor(x => x.FirstName)
        </div>
        <div>
            Last Name: @Html.TextBoxFor(x => x.LastName)
        </div>
        <div>
            Birthday: <input asp-for="DateTime" type="date" />
        </div>
        <div>
            Motherland: @Html.TextBoxFor(x => x.Motherland)
        </div>
        <div>
            <input type="submit" value="Add" />
        </div>
    </div>
    
</form>