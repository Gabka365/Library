@model Library.Models.Authors.AuthorViewModel


@section Style
{
    <link href="/css/library.css?v=1.1" rel="stylesheet"></link>
}


<h2> Create author </h2>

<form action="/Authors/CreateAuthor" method="post" enctype="multipart/form-data">
    
    <div class="input-block">
        <div>
            First Name: @Html.TextBoxFor(x => x.FirstName)
        </div>
        <div>
            Last Name: @Html.TextBoxFor(x => x.LastName)
        </div>
        <div>
            Birthday: <input asp-for="DateTime" type="date" />
        </div>
        <div>
            Motherland: @Html.TextBoxFor(x => x.Motherland)
        </div>
        <div>
            <input class="btn btn-primary" type="submit" value="Add" />
        </div>
    </div>
    
</form>