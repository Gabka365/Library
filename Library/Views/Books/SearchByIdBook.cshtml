@model Library.Models.Common.SearchByIdViewModel


@section Style {
    <link href="/css/library.css?v=1.6" rel="stylesheet" />
}


@if (Model.Book is not null)
{
    <h2> Searched book </h2>


    <div class="book">
        <div>
            <div class="content">Id:</div> @Model.Book.Id
        </div>
        <div>
            <div class="content">Name:</div> @Model.Book.Name
        </div>
        <div>
            <div class="content">Genre:</div> @Model.Book.Genre
        </div>
        <div>
            <div class="content">Description:</div> @Model.Book.Description
        </div>
        <div>
            <div class="content">Author's name:</div> @(Model.Book.BookAuthor != null ? $"{Model.Book.BookAuthor.FirstName} {Model.Book.BookAuthor.LastName}" : "Unknown Author")
        </div>
        <div>
            <div class="content">ISBN:</div> @Model.Book.ISBN
        </div>
        @if ((bool)Model.HasCover)
        {
            <div class="cover-block">
                <div class="content">Cover:</div> <img class="cover-book" src="/images/book covers/cover-@(Model.Id).jpg" asp-append-version="true" />
            </div>
        }
    </div>



}
else
{
    <h2> Search book by id </h2>

    <form class="search-by-id" action="/Books/SearchByIdBook" method="post">
        Search by id: @Html.TextBoxFor(x => x.Id)
        <input type="submit" value="Search" />
    </form>

    @Html.ValidationMessageFor(x => x.Id)
}